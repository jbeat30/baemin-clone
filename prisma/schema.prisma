generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Shop {
  id           String   @id @default(uuid())
  title        String
  star         Int
  description  String
  deliveryTime String
  deliveryFee  String
  minumumOrder String
  cardImage    String
  coverImage   String
  tags         String[]
  phone        String
  review       Review[]
  heart        Heart[]
  create_at    DateTime @default(now())
  update_at    DateTime @updatedAt
}

model Review {
  id     String  @id @default(uuid())
  Shop   Shop?   @relation(fields: [shopId], onDelete: Cascade, references: [id])
  shopId String?

  @@index([shopId])
}

model Heart {
  id     String  @id @default(uuid())
  Shop   Shop?   @relation(fields: [shopId], onDelete: Cascade, references: [id])
  shopId String?

  @@index([shopId])
}
